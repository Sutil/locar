<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow 
	  http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
	abstract="true">

	<end-state id="Home" view="externalRedirect:contextRelative:/spring/home" />
	<end-state id="Veiculos" view="externalRedirect:contextRelative:/spring/veiculo" />
	<end-state id="Categorias" view="externalRedirect:contextRelative:/spring/categoria" />
	<end-state id="Seguranca"
		view="externalRedirect:contextRelative:/spring/seguranca" />
	<end-state id="Clientes"
		view="externalRedirect:contextRelative:/spring/cliente" />
	<end-state id="Locacoes"
		view="externalRedirect:contextRelative:/spring/locacao" />
	<end-state id="Relatorios"
		view="externalRedirect:contextRelative:/spring/relatorios" />
	<end-state id="Reservas"
		view="externalRedirect:contextRelative:/spring/reserva" />
		<end-state id="Multas"
		view="externalRedirect:contextRelative:/spring/multa" />

	<global-transitions>
		<transition on="home" to="Home" />
		<transition on="veiculos" to="Veiculos" />
		<transition on="categorias" to="Categorias" />
		<transition on="seguranca" to="Seguranca" />
		<transition on="clientes" to="Clientes"></transition>
		<transition on="locacoes" to="Locacoes"></transition>
		<transition on="seguranca" to="Seguranca"></transition>
		<transition on="relatorios" to="Relatorios"></transition>
		<transition on="reservas" to="Reservas"></transition>
		<transition on="multas" to="Multas"></transition>
	</global-transitions>


</flow>